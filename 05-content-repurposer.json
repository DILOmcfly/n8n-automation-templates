      "parameters": {
        "jsCode": "const html = $input.first().json.body;\n// Extract text content (basic HTML stripping)\nconst text = html.replace(/<script[^>]*>[\\s\\S]*?<\\/script>/gi, '')\n  .replace(/<style[^>]*>[\\s\\S]*?<\\/style>/gi, '')\n  .replace(/<[^>]+>/g, ' ')\n  .replace(/\\s+/g, ' ')\n  .trim()\n  .substring(0, 8000);\nreturn [{ json: { content: text, url: $('Webhook - New Content').first().json.blog_url } }];"
      },
      "id": "extract-text",
      "name": "Extract Article Text",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        750,
        300
      ]
